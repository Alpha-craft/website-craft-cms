<div class="bg-green-300 flex flex-col rounded p-5 my-3" >
  <div class="text-center border-b-2 border-black text-xl" > {{group}} </div>
  {% block card %}  
  {% endblock %}

  <ul>
    {% set items = items|default([]) %}
    {% for item in items %}
      {% if item.label is not empty %}
      <li> {{ item.label|raw }} </li>
      {% endif %}
    {% endfor %}
  </ul>
  {% set description = desc|default("") %}
  {% if description %}
   <span class="px-4"> </span> {{description}}
  {% endif %}
</div>