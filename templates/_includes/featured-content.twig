<div class="bg-green-300">
  <h1 class="text-3xl text-center m-auto border-b-2 border-black w-3/4 py-3"> {{header}} </h1>
  <div class="flex flex-col md:flex-row space-x-0 md:space-x-16  p-7 place-content-center">
    {% for item in data %}
      <a href="{{item.url}}">
        <div class="border-box md:box-content place-content-center ">
          <div class=" {{borderColor}} border-2 transition duration-300 ease-in-out hover:scale-110">
            <h1 class="text-lg md:text-xl p-2 {{bgHeader}} {{headerColor}}">{{item.title}}</h1>
            <img src="{{item.image.one().url}}" style="height: 150px; width: 300px;" alt="{{item.title}}">      
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</div>